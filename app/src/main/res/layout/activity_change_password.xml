<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_small"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    android:overScrollMode="always">


    <RelativeLayout
        android:background="@drawable/background_image_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageView121"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#BF161616" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/editTextCurrentPass"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            android:background="@drawable/za_text_edit"
            android:ems="10"
            android:hint="Current password"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextNewPass"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editTextCurrentPass"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:layout_marginTop="46dp"
            android:background="@drawable/za_text_edit"
            android:ems="10"
            android:hint="New password"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextConfirmPass"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editTextNewPass"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:layout_marginTop="46dp"
            android:background="@drawable/za_text_edit"
            android:ems="10"
            android:hint="Confirm password"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextConfirmPass"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSubmit"
                android:layout_width="130dp"
                android:layout_height="50dp"

                android:layout_below="@+id/editTextConfirmPass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/yellow2"
                app:cardCornerRadius="3.5dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/cardViewSubmit">

                    <TextView
                        android:id="@+id/textViewSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Submit"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCancel"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="50dp"
                app:cardBackgroundColor="@color/yellow2"
                app:cardCornerRadius="3.5dp"
                app:cardElevation="8dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cancel"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"/>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </RelativeLayout>
   <!-- <android.support.design.widget.NavigationView
        android:id="@+id/nav1"
